<Page x:Class="Enigma.GameWPF.Visual.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p = "clr-namespace:Enigma.GameWPF.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      ShowsNavigationUI="False" Background="White">
    <StackPanel>
        <TextBlock x:Name="textBlock" Text="{x:Static p:Resources.Enigma}" TextWrapping="Wrap" FontSize="72" HorizontalAlignment="Center" Margin="0,100,0,0"/>
        <UniformGrid HorizontalAlignment="Center" Width="600" Margin="0,50,0,0" Rows="1">
            <Button Style="{StaticResource ButtonStyle}" Content="{x:Static p:Resources.ContinueGame}" Height="100" Width="100" Click="Button_ContinueGame_Click"/>
            <Button Style="{StaticResource ButtonStyle}" Content="{x:Static p:Resources.NewGame}" Height="100" Width="100" Click="Button_NewGame_Click"/>
            <Button Style="{StaticResource ButtonStyle}" Content="{x:Static p:Resources.Settings}" Height="100" Width="100" Click="Button_Setting_Click"/>
            <Button Style="{StaticResource ButtonStyle}" Content="{x:Static p:Resources.Exit}" Height="100" Width="100" Click="Button_Exit_Click"/>
        </UniformGrid>
    </StackPanel>
</Page>
